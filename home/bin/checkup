#!/bin/bash

# Check for internet connectivity.
if ! ping -c 1 -W 2 google.com &>/dev/null; then
  exit 1
fi

ups=$(checkupdates | wc -l)
aur_ups=$(yay -Qua | wc -l)

total=$((ups + aur_ups))
[ "$total" -eq 0 ] && exit 0

notify-send -t 10000 "Û∞èî Updates Available" "$total package(s) can be updated."
