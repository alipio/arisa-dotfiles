# General settings.
[user]
  name = Al√≠pio de Paula
  email = alipiodepaula@gmail.com

[alias]
  aa = add ':(exclude,attr:builtin_objectmode=160000)'
  ap = add -p
  br = branch
  ci = commit
  cm = "!f() { git commit -m \"$*\"; }; f"
  co = checkout
  cp = cherry-pick
  d = diff
  dc = diff --cached
  f = fetch origin
  fu = !git commit --fixup $(git rev-parse HEAD)
  ico = !git branch --no-color --sort=-committerdate --format='%(refname:short)' \
    | grep -vxF "$(git branch --show-current)" \
    | fzf \
    | ifne xargs git checkout
  la = !git lg --all
  lg = log --graph --abbrev-commit --pretty=format:'%C(yellow bold)%h%Creset by %C(red)%an%Creset (%ar)%C(cyan bold)%d%Creset%n%s%n%b'
  mt = mergetool
  nb = checkout -b
  p = push
  pur = pull --rebase=merges
  ra = rebase --abort
  rc = rebase --continue
  ri = rebase -i master
  rs = rebase --skip
  st = !git status -s && git diff --shortstat
  su = submodule update --init
  wc = log ORIG_HEAD.. --stat --no-merges

  abort = !git discard .
  amend = commit --amend --no-edit
  clean = "!git branch --no-color --merged | grep -vF '*' | xargs -n 1 git branch -d"
  discard = checkout --
  force = push --force-with-lease
  master = checkout master
  startover = !git reset --hard HEAD && git clean -df
  sync = !git update && git master && git pull && git co '@{-1}'
  unadd = reset HEAD --
  uncommit = reset --soft HEAD~
  update = "!f() { git fetch origin && git rebase --rebase-merges origin/${1:-master}; }; f"

[core]
  autocrlf = input
  pager = diff-so-fancy | less --tabs=4 -RF

[init]
  defaultBranch = master

[interactive]
  diffFilter = diff-so-fancy --patch

[color]
  ui = true

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22

[color "diff"]
  meta = 11
  frag = magenta bold
  func = 146 bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse

[url "https://github.com/"]
  insteadOf = gh:

[url "git@github.com:"]
  pushInsteadOf = https://github.com/

# Command settings.
[branch]
  sort = -committerdate

[commit]
  verbose = true

[diff]
  algorithm = histogram
  noPrefix = true
  colorMoved = default
  submodule = log

[fetch]
  prune = true
  pruneTags = true

[help]
  autoCorrect = 10

[log]
  abbrevCommit = true

[merge]
  tool = nvimdiff
  conflictStyle = diff3

[mergetool "nvimdiff"]
  trustExitCode = true
  keepBackup = false

[pull]
  ff = only

[push]
  default = current
  autoSetupRemote = true

[rebase]
  autoSquash = true
  autoStash = true

[rerere]
  enabled = true

[status]
  submoduleSummary = true
  showUntrackedFiles = all
