  email = alipiodepaula@gmail.com

[alias]
  # Sometimes git is just retarded, so we try to make it "suckless"
  unstage = reset -q HEAD --
  discard = checkout --
  giveup = !git reset --hard HEAD && git clean -df
  uncommit = reset --mixed HEAD~
  recommit = commit --amend --reuse-message=HEAD --date=now
  amend = commit --amend -v
  update = !sh -c 'git fetch origin && git rebase origin/${1-master}' -
  sync = !git update && git checkout master && git pull && git checkout @{-1}

[core]
  autocrlf = input
  pager = diff-so-fancy | less --tabs=4 -RF

[init]
  defaultBranch = master

[interactive]
  diffFilter = diff-so-fancy --patch

[color]
  ui = true

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22

[color "diff"]
  meta = 11
  frag = magenta bold
  func = 146 bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse

[column]
  ui = auto

[url "https://github.com/"]
  insteadOf = gh:

##=========

[branch]
  sort = -committerdate

[commit]
  verbose = true

[diff]
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  renames = true
  submodule = log

[fetch]
  prune = true
  pruneTags = true
  all = true

[help]
  autoCorrect = prompt

[log]
  abbrevCommit = true

[pull]
  rebase = true

[push]
  default = current
  autoSetupRemote = true
  followTags = true

[rebase]
  autoSquash = true
  autoStash = true
  updateRefs = true

[rerere]
  enabled = true

[status]
  short = true
  submoduleSummary = true
  showUntrackedFiles = all

[tag]
  sort = version:refname
